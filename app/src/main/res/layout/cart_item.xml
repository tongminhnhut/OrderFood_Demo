<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/bgDelete"
        android:layout_margin="8dp"
        android:id="@+id/view_backGroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgDelete_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_marginRight="10dp"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:text="Delete"
            android:layout_toLeftOf="@+id/imgDelete_icon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/layout_View_CartItem"
        android:layout_margin="8dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgFood_cartItem"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <LinearLayout

            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:id="@+id/txtName_CardItem"
                android:text="Food 01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="italic"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:id="@+id/txtPrice_CardItem"
                android:text="10,000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            app:finalNumber="10"
            app:initialNumber="1"
            app:backGroundColor="@color/colorAccent"
            app:textSize="8sp"
            android:padding="1dp"
            android:id="@+id/numer_button_cartItem"
            android:layout_margin="10dp"
            android:layout_width="60dp"
            android:layout_height="30dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>