<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg"
    tools:context="com.tongminhnhut.orderfood_demo.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/icon_order"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:textSize="25sp"
            android:id="@+id/txtLogan"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="I'm not hungry. But I am bored. Therefore i shall eat"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <info.hoang8f.widget.FButton
            app:fButtonColor="@color/btnMainUp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Sign Up"
            android:id="@+id/btnSignUp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            android:layout_margin="8dp"
            app:cornerRadius="4dp"/>

        <info.hoang8f.widget.FButton
            app:fButtonColor="@color/btnMainIn"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:text="Sign In"
            android:id="@+id/btnSignIn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            android:layout_margin="8dp"
            app:cornerRadius="4dp"/>


    </LinearLayout>




</RelativeLayout>
