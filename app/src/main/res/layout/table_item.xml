<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="7dp">

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/txtBan_TableItem"
            android:text="Ban so 1 "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtStatus_TableItem"
            android:text="Bàn trống"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtDate_TableItem"
                android:layout_weight="1"
                android:text="Ngày: 01/03/2018"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtTime_TableItem"
                android:layout_weight="1"
                android:text="Giờ: 16:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <info.hoang8f.widget.FButton
                android:layout_weight="1"
                android:id="@+id/btnThanhtoan_TableItem"
                android:shadowColor="@android:color/white"
                app:cornerRadius="5dp"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:layout_marginTop="10dp"
                app:fButtonColor="@android:color/white"
                android:text="Thanh toán"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <info.hoang8f.widget.FButton
                android:layout_weight="1"
                android:id="@+id/btnReset_TableItem"
                android:shadowColor="@android:color/white"
                app:cornerRadius="5dp"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:layout_marginTop="10dp"
                app:fButtonColor="@android:color/white"
                android:text="Reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>